											<%= f.label :venmo_password %>
										</div>
										<div class="col-sm-6">
											<%= f.password_field :venmo_password, :required => true %>
										</div>
									</div>
								</div>
							</div>
						</div> <!--End form-->
					</div>
				</div>
			</div> <!--End Card Block-->
		</div>
