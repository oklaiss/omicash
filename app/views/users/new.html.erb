<div class="col-md-6 col-md-offset-3" style="margin-top:3%;">
	<h1>Signup!</h1>

	<%= form_for :user, url: '/users' do |f| %>

  <br>
  <div class="row">
    <div class="col-sm-12">
      <div class="card show_notif_card">
        <div class="card-block">
        	<h3>Create your account:</h3>
          <div class="row">
            <div class="col-sm-12">
              <div class="form omiForm">
                <div class="form-group">
                  <div class="field">
                    <div class="row">
                      <div class="col-sm-5 text-right">
                        <%= f.label :name %>
                      </div>
                      <div class="col-sm-6">
                        <%= f.text_field :name, :required => true %>
                      </div>
                    </div>
                    </input>
                  </div>
                </div>
                <div class="form-group">
                  <div class="field">
                    <div class="row">
                      <div class="col-sm-5 text-right">
                        <%= f.label :email %>
                      </div>
                      <div class="col-sm-6">
                        <%= f.email_field :email, :required => true %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="field">
                    <div class="row">
                      <div class="col-sm-5 text-right">
                        <%= f.label :Password %>
                      </div>
                      <div class="col-sm-6">
                        <%= f.password_field :password, :required => true %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="field">
                    <div class="row">
                      <div class="col-sm-5 text-right">
                        <%= f.label :Confirm_Password %>
                      </div>
                      <div class="col-sm-6">
                        <%= f.password_field :password_confirmation, :required => true %>
                      </div>
                    </div>
                  </div>
                </div>
              </div> <!--End form-->
            </div>
          </div>
        </div> <!--End Card Block-->
      </div>
      <br><br>

			<div class="card show_notif_card">
        <div class="card-block">
        	<h3>Please enter your Venmo Credentials:</h3>
          <div class="row">
            <div class="col-sm-12">
              <div class="form omiForm">
                <div class="form-group">
									<div class="field">
										<div class="row">
											<div class="col-sm-5 text-right">
												<%= f.label :venmo_username %>
											</div>
											<div class="col-sm-6">
												<%= f.text_field :venmo_username, :required => true %>
											</div>
										</div>
									</input>
								</div>
							</div>
							<div class="form-group">
								<div class="field">
									<div class="row">
										<div class="col-sm-5 text-right">
											<%= f.label :venmo_password %>
										</div>
										<div class="col-sm-6">
											<%= f.password_field :venmo_password, :required => true %>
										</div>
									</div>
								</div>
							</div>
              </div> <!--End form-->
            </div>
          </div>
        </div> <!--End Card Block-->
      </div>


    </div>
  </div>
  <br>
  <%= f.submit "Save Changes", :class => "btn btn-venmo" %>



<% end %>


</div>
